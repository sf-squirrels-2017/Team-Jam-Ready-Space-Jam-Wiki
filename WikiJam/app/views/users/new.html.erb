<article class="xviews xusers xnew">
	<%= form_for(@user) do |f| %>
	  <%= f.label :username %>
	  <%= f.text_field :username %>

	  <%= f.label :email %>
	  <%= f.email_field :email %>

	  <%= f.label :password %>
	  <%= f.password_field :password %>

	  <%= f.label :password_confirmation, "Confirmation" %>
	  <%= f.password_field :password_confirmation %>

	  <%= f.submit  %>
	<% end %>
</article>
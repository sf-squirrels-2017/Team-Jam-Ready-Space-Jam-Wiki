<article class="xviews xusers xnew">
	<%= form_for(@user) do |f| %>
	  <%= f.label :username %>
	  <%= f.text_field :username %><br>

	  <%= f.label :email %>
	  <%= f.email_field :email %><br>

	  <%= f.label :password %>
	  <%= f.password_field :password %><br>

	  <%= f.label :password_confirmation, "Confirmation" %>
	  <%= f.password_field :password_confirmation %><br>

	  <%= f.submit  %>
	<% end %>
</article>